{
  "openapi": "3.1.0",
  "info": {
    "title": "linkr audio API",
    "version": "1.0.0",
    "description": "API for managing releases on linkr.audio"
  },
  "paths": {
    "/auth/login": {
      "get": {
        "summary": "Check login validity",
        "description": "Login endpoint for authentication. Will respond 200 if login (auth header) is valid, 401 otherwise.",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Login successful"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/artists": {
      "post": {
        "summary": "Create a new artist",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": true,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "artist_name": {
                    "type": "string"
                  },
                  "pw": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Artist created successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "Invalid request body"
          }
        }
      }
    },
    "/artists/{id}": {
      "get": {
        "summary": "Get artist details",
        "parameters": [
          {
            "$ref": "#/components/parameters/artistId"
          }
        ],
        "responses": {
          "200": {
            "description": "Artist details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Artist"
                }
              }
            }
          },
          "404": {
            "description": "Artist not found"
          }
        }
      }
    },
    "/releases/{id}": {
      "parameters": [
        {
          "$ref": "#/components/parameters/artistId"
        }
      ],
      "get": {
        "summary": "Get all releases for an artist",
        "responses": {
          "200": {
            "description": "List of releases",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Release"
                  }
                }
              }
            }
          },
          "404": {
            "description": "No releases found for artist"
          }
        }
      },
      "post": {
        "summary": "Add new release under this artist id",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PostNewReleaseBody"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Release created successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "Invalid request body"
          }
        }
      }
    },
    "/releases/{id}/{slug}": {
      "parameters": [
        {
          "$ref": "#/components/parameters/artistId"
        },
        {
          "$ref": "#/components/parameters/releaseSlug"
        }
      ],
      "get": {
        "summary": "Get a specific release",
        "responses": {
          "200": {
            "description": "Release details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Release"
                }
              }
            }
          },
          "404": {
            "description": "Release not found"
          }
        }
      },
      "post": {
        "summary": "Edit an existing release",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Release"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Release updated successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "Invalid request body"
          }
        }
      }
    },
    "/links/{upc}": {
      "get": {
        "summary": "Get streaming links by UPC",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "parameters": [
          {
            "name": "upc",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Streaming links",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LinkResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    },
    "parameters": {
      "artistId": {
        "description": "Artist ID",
        "name": "id",
        "required": true,
        "schema": {
          "type": "string"
        },
        "in": "path"
      },
      "releaseSlug": {
        "description": "Release slug",
        "name": "slug",
        "required": true,
        "schema": {
          "type": "string"
        },
        "in": "path"
      }
    },
    "schemas": {
      "Artist": {
        "type": "object",
        "required": [
          "artist_id",
          "master_artist_name"
        ],
        "properties": {
          "artist_id": {
            "type": "string"
          },
          "master_artist_name": {
            "type": "string"
          },
          "styling": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "Release": {
        "type": "object",
        "required": [
          "upc",
          "title",
          "artist_name",
          "release_date",
          "links",
          "artist_id",
          "slug",
          "track_count"
        ],
        "properties": {
          "upc": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "artist_name": {
            "type": "string"
          },
          "release_date": {
            "type": "string"
          },
          "artwork": {
            "type": "string",
            "nullable": true
          },
          "links": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Link"
            }
          },
          "artist_id": {
            "type": "string"
          },
          "slug": {
            "type": "string"
          },
          "track_count": {
            "type": "integer"
          }
        }
      },
      "PostNewReleaseBody": {
        "type": "object",
        "required": [
          "slug",
          "upc",
          "title",
          "release_date",
          "artist_name",
          "artwork",
          "links",
          "track_count"
        ],
        "properties": {
          "slug": {
            "type": "string"
          },
          "upc": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "release_date": {
            "type": "string"
          },
          "artist_name": {
            "type": "string"
          },
          "artwork": {
            "type": "string"
          },
          "links": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Link"
            }
          },
          "track_count": {
            "type": "integer"
          }
        }
      },
      "Link": {
        "type": "object",
        "required": [
          "name",
          "url"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        }
      },
      "LinkResponse": {
        "type": "object",
        "required": [
          "upc"
        ],
        "properties": {
          "upc": {
            "type": "string"
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "artist_name": {
            "type": "string",
            "nullable": true
          },
          "track_count": {
            "type": "integer",
            "nullable": true
          },
          "image_url": {
            "type": "string",
            "nullable": true
          },
          "release_date": {
            "type": "string",
            "nullable": true
          },
          "spotify": {
            "type": "string",
            "nullable": true
          },
          "apple_music": {
            "type": "string",
            "nullable": true
          },
          "tidal": {
            "type": "string",
            "nullable": true
          },
          "soundcloud": {
            "type": "string",
            "nullable": true
          },
          "bandcamp": {
            "type": "string",
            "nullable": true
          },
          "youtube": {
            "type": "string",
            "nullable": true
          }
        }
      }
    }
  }
}